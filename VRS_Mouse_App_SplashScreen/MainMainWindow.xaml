<Window x:Class="VRS_Mouse_App_SplashScreen.MainMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRS_Mouse_App_SplashScreen"
        mc:Ignorable="d"
        Title="MainMainWindow" Height="764" Width="532"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" 
        SnapsToDevicePixels="True" Background="#FFE82121"
        >
    <Grid>
        <Button Name="ExitButton" Content="X" 
        HorizontalAlignment="Right" VerticalAlignment="Top" 
        Width="30" Height="30" 
        Background="{x:Null}" Foreground="#FFFFF5F5" BorderBrush="{x:Null}"
        FontSize="18" Style="{StaticResource latoFontButton}"/>
        
        <Button x:Name="ExitButton_Copy" Content="min" 
            HorizontalAlignment="Left" VerticalAlignment="Top" 
            Width="30" Height="30" 
            Background="{x:Null}" Foreground="#FFFFF5F5" BorderBrush="{x:Null}"
            FontSize="18" Style="{StaticResource latoFontButton}" Margin="467,0,0,0"/>
    </Grid>
</Window>
