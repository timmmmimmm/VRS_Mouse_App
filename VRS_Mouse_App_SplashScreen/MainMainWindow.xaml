<Window x:Class="VRS_Mouse_App_SplashScreen.MainMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRS_Mouse_App_SplashScreen"
        mc:Ignorable="d"
        Title="MainMainWindow" Height="1024" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" 
        SnapsToDevicePixels="True" Background="#FFE82121"
        >
    <Grid>
        <Button Name="ExitButton"
        HorizontalAlignment="Right" VerticalAlignment="Top" 
        Width="60" Height="60" 
        Background="{x:Null}" Foreground="#FFFFF5F5" BorderBrush="{x:Null}" Style="{StaticResource latoFontButton}" Click="ExitButton_Click">
            <Image Source="Media/exitButton.png"/>
        </Button>

        <Button x:Name="MinimizeButton"
            HorizontalAlignment="Left" VerticalAlignment="Top" 
            Width="60" Height="60" 
            Background="{x:Null}" Foreground="#FFFFF5F5" BorderBrush="{x:Null}" Style="{StaticResource latoFontButton}"
            FontSize="18" Margin="675,0,0,0" Click="ExitButton_Copy_Click">
            <Image Source="Media/minimize.png" />
        </Button>

    </Grid>
</Window>
