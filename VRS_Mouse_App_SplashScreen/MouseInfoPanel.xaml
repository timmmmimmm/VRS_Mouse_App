<UserControl x:Class="VRS_Mouse_App_SplashScreen.MouseInfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VRS_Mouse_App_SplashScreen"
             mc:Ignorable="d" 
             d:DesignHeight="420" d:DesignWidth="580" Background="Transparent">
    <UserControl.Resources>
        <Style x:Key="descTextBox" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="descContentTextBox" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Margin" Value="10,0,0,10"/>
        </Style>

        <Style x:Key="btnDescTextBox" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <Style x:Key="btnDescValTextBox" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!--<ResourceDictionary>
            
        </ResourceDictionary>-->
    </UserControl.Resources>

    <StackPanel Width="580" Height="420">
        <ScrollViewer HorizontalScrollBarVisibility="Disabled"  Width="580" Height="420">
            <Grid Height="auto" Width="580">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>

                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Mouse Info" FontSize="30"
                   Width="420" Height="auto" 
                   VerticalAlignment="Top" HorizontalAlignment="Center"
                   Foreground="White" TextAlignment="Center"/>


                <Grid Grid.Row="1" Width="auto" Height="auto"
              VerticalAlignment="Top" HorizontalAlignment="Center" Margin="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="Name:"
                       Style="{StaticResource descTextBox}"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                       Text="VRS Mouse 1.0" 
                       Style="{StaticResource descContentTextBox}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0"
                       Text="UID:" 
                       Style="{StaticResource descTextBox}"/>
                    <TextBlock Grid.Row="1" Grid.Column="1"
                       Text="0000001" 
                       Style="{StaticResource descContentTextBox}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="Controller:" 
                       Style="{StaticResource descTextBox}"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                       Text="STM32F303K8" 
                       Style="{StaticResource descContentTextBox}"/>
                </Grid>

                <Canvas Grid.Row="2" Width="auto" Height="auto" Margin="0,0,0,60">
                    <Line X1="0" X2="580" Stroke="White" StrokeThickness="2"/>
                </Canvas>

                <TextBlock Grid.Row="3" Text="Current button settings" FontSize="30"
                        Width="420" Height="auto" 
                        VerticalAlignment="Top" HorizontalAlignment="Center"
                        Foreground="White" TextAlignment="Center"/>

                <Grid Grid.Row="4" Width="auto" Height="auto"
                    VerticalAlignment="Top" HorizontalAlignment="Center" Margin="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Button 1:"
                           Style="{StaticResource descTextBox}"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                           Text="Home" 
                           Style="{StaticResource descContentTextBox}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Button 2:" 
                           Style="{StaticResource descTextBox}"/>
                    <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="Idk" 
                           Style="{StaticResource descContentTextBox}"/>

                </Grid>

                <Canvas Grid.Row="5" Width="auto" Height="auto" Margin="0,0,0,60">
                    <Line X1="0" X2="580" Stroke="White" StrokeThickness="2"/>
                </Canvas>

                <TextBlock Grid.Row="6" Text="Current sensitivity settings" FontSize="30"
            Width="420" Height="auto" 
            VerticalAlignment="Top" HorizontalAlignment="Center"
            Foreground="White" TextAlignment="Center"/>

                <Grid Grid.Row="7" Width="auto" Height="auto"
                VerticalAlignment="Top" HorizontalAlignment="Center" Margin="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="DPI:"
                           Style="{StaticResource descTextBox}"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                           Text="1" 
                           Style="{StaticResource descContentTextBox}"/>

                </Grid>
            </Grid>
        </ScrollViewer>

    </StackPanel>
    
</UserControl>
